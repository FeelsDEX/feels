{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": ["tools/devbridge/server/**/*.ts", "scripts/devbridge-cli.ts"],
  "exclude": ["node_modules"]
}